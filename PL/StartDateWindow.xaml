<Window x:Class="PL.StartDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StartDateWindow" Height="300" Width="600"
         DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
   
    <Grid>
        <Label Content="Enter Start Date:" Margin="206,58,130,0" VerticalAlignment="Top" RenderTransformOrigin="0.481,1.168" Height="53" FontSize="25"/>
        <DatePicker SelectedDate="{Binding StartDate}" Margin="100,100" Width="200" Height="50"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="485,221,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.066,-0.174" Width="104" Height="48" Click="Button_Click_ok" Background="LightBlue" BorderBrush="Black"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="366,221,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.221,0.607" Width="104" Height="48" Click="Button_Click_cancel" Background="LightBlue" BorderBrush="Black"/>

    </Grid>
</Window>
